= simple_form_for(@qualificacao_hotel) do |f|
  = f.error_notification

  .form-inputs
    = f.input :concretizado, class: 'checkbox'

    %h4 * Digite sua opção: *
    %p 1) Ocorreu td bem, Parabens!! ---  2)  Desisti da Compra --- 3) Fui enganado! --- 4) Outra
    = f.input :justificativa, class: 'form-control round-form'
    %br
    %h4 * Digite sua opção: *
    %p 1) Positivo  ---  2) Neutro  ---  3) Negativo

    = f.input :nivel, class: 'form-control round-form'
    %br
    = f.input :comentario, class: 'form-control round-form'
    %br
    = f.association :usuario, label_method: :nome, class: 'form-control round-form'
    %br
    = f.association :hotel, label_method: :nome, class: 'form-control round-form'
    %br

  .form-actions
    = f.button :submit, 'Salvar', class: 'btn btn-round btn-danger'
