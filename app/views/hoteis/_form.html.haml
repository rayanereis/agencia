= form_for @hotel do |f|
  - if @hotel.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hotel.errors.count, "error")} prohibited this hotel from being saved:"
      %ul
        - @hotel.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nome,
    = f.text_field :nome,
  .field
    = f.label :cnpj,
    = f.text_field :cnpj,
  .field
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit 'Salvar'
